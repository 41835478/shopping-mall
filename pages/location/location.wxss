/* pages/location/location.wxss */
.location-box .header {
    margin-bottom: 10px;
    padding: 15px 15px 40px;
    position: relative;
}

.location-box .header::after {
    position: absolute;
    bottom: 0;
    content: "";
    height: 5px;
    width: 94%;
    right: 5px;
    background-image: linear-gradient(to right, #49c4d3 0%, #49c4d3 60%, transparent 50%);
    background-size: 40px 5px;
    background-repeat: repeat-x;
}

.location-box .header .user-info {
    display: flex;
    justify-content: space-between;
}

.location-box .header .location {
    line-height: 20px;
    margin-top: 10px;
}

.location-box .edit{
  margin-top: 10px;
  float: right;
}

.location-box .edit image{
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  margin-right: 6px;
}